<div>
    <div>
        <div class="main-content">
          {{#widget-header}}{{/widget-header}}
            <div class="page-wrapper col-xs-12 col-sm-12 col-md-12 col-lg-12 sidebar-closed">
                {{#side-bar}}{{/side-bar}}
                <div class="body hide-content">
                    <h1>Add Devices</h1>
                  <div class="">
                {{#if isShowAddDevices}}
                  <table class="add-devices">
                      <div class="form-group">
                          <span>
                              <label class="D-name">Device Name</label>
                            {{input type="text" value=nme enter="onclickAddBtn" class="form-control"}}
                          </span>
                      </div>
                        <div class="form-group">
                          <span>
                              <label class="D-name">Device Group</label>
                              <select class="form-control" value=grp enter="onclickAddBtn" onchange={{action 'onSelectEntityType' value="target.value"}}>
                                  <option value="Bulb">Bulb</option>
                                  <option value="Switch">Switch</option>
                                  <option value="Fan">Fan</option>
                              </select>
                          </span>
                        </div>
                        <div class="form-group">
                          <span>
                              <label class="D-name">Expected Unit Limits</label>
                            {{input type="text" value=lmt enter="onclickAddBtn" class="form-control"}}
                          </span>
                        </div>
                      <div class="form-group">
                          <button type="submit" class="btn" {{action "onclickAddBtn" this}}> Add</button>
                      </div>
                      <div class="form-group">
                          <button type="reset" class="btn" {{action "reset" this}}> Reset</button>
                      </div>
                    </table>
                {{else}}
                      <div>Device Added Successfully</div>
                      <div class="form-group">
                          <button type="submit" class="add" {{action "showAddDevicePage"}}>Add Devices</button>
                      </div>
                {{/if}}
                  </div>
                </div>
            </div>
        </div>
    </div>
</div>